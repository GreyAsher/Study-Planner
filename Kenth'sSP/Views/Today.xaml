<UserControl x:Class="KenthSP.Views.Today"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kenth_sSP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Today's Tasks" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Math Homework -->
            <Border Background="#FFB3E5FC" Margin="5" Padding="10" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="Math Homework" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Due: Today 5 PM" FontSize="14"/>
                </StackPanel>
            </Border>
            <!-- Science Project -->
            <Border Background="#FFC8E6C9" Margin="5" Padding="10" CornerRadius="10" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="Science Project" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Due: Today 11 PM" FontSize="14"/>
                </StackPanel>
            </Border>
            <!--history-->
            <Border Background="#FFFFF9C4" Margin="5" Padding="10" CornerRadius="10" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="History Essay" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Due: Today 8 PM" FontSize="14"/>
                </StackPanel>
            </Border>
            <!--Art Assignment-->
            <Border Background="#FFFFCCBC" Margin="5" Padding="10" CornerRadius="10" Grid.Column="3">
                <StackPanel>
                    <TextBlock Text="Art Assignment" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="Due: Today 6 PM" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
