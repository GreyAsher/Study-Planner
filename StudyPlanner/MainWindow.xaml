<Window x:Class="StudyPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Study Planner"
        WindowState="Maximized"
        MinWidth="900"
        MinHeight="600"
        Background="#F4F6F8">

    <Window.Resources>

        <!-- Sidebar Button Style -->
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15 8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4ECCA3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3AA17E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- Root Container -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Background="#232931"
                CornerRadius="0"
                Margin="0"
                Padding="0"
                VerticalAlignment="Stretch">

            <DockPanel LastChildFill="True">
                <!-- Header -->
                <StackPanel DockPanel.Dock="Top" Margin="0 25 0 0">
                    <TextBlock Text="Study Planner"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0 10 0 0"/>
                    <TextBlock Text="Welcome, Student!"
                               FontSize="13"
                               Foreground="#B0BEC5"
                               TextAlignment="Center"/>
                    <Separator Margin="20 15 20 10"
                               Background="#4ECCA3"
                               Height="1"/>
                </StackPanel>

                <!-- Menu Buttons -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10 20 10 10">
                        <Button Style="{StaticResource MenuButton}" Margin="0 0 0 15" Click="DashboardButton_Click">
                            <TextBlock Text="📈  Dashboard"/>
                        </Button>

                        <Button Style="{StaticResource MenuButton}" Margin="0 0 0 15" Click="TodayButton_Click">
                            <TextBlock Text="🌄  Today"/>
                        </Button>

                        <Button Style="{StaticResource MenuButton}" Margin="0 0 0 15" Click="CalendarButton_Click">
                            <TextBlock Text="🗓️  Calendar"/>
                        </Button>

                        <Button Style="{StaticResource MenuButton}" Margin="0 0 0 15" Click="SubjectsButton_Click">
                            <TextBlock Text="📚  Subjects"/>
                        </Button>

                        <Button Style="{StaticResource MenuButton}" Margin="0 0 0 15" Click="GoalsButton_Click">
                            <TextBlock Text="🎯  Goals"/>
                        </Button>

                        <Button Style="{StaticResource MenuButton}" Margin="0 0 0 15" Click="NotesButton_Click">
                            <TextBlock Text="📝  Notes"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="15"
                Margin="15"
                Padding="15"
                SnapsToDevicePixels="True">
            <ContentControl x:Name="MainContent"/>
        </Border>
    </Grid>
</Window>
