<UserControl x:Class="StudyPlanner.Views.Subjects"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid x:Name="SubjectGrid"  Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="My Subjects"
                   FontSize="26"
                   FontWeight="SemiBold"
                   Foreground="#232931"
                   Margin="0 0 0 20"/>
        <Border>
            <Button Content="Add Subject"
                    Width="120"
                    Height="35"
                    HorizontalAlignment="Right"
                    Background="#4ECCA3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddSubjectButton_Click"/>
        </Border>

        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Subjects}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#E3FCEF" Padding="15" CornerRadius="12" Margin="10">
                            <StackPanel>
                                <TextBlock Text="{Binding SubjectName}" FontSize="18" FontWeight="Bold" Foreground="#232931"/>
                                <TextBlock Text="{Binding TargetHours, StringFormat='Target Hours: {0} hrs'}" 
                                       Foreground="#555" 
                                       Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding Progress, StringFormat='Progress: {0}%'}" Foreground="#555"/>
                                <ProgressBar Value="{Binding Progress}" Height="8" Foreground="#4ECCA3" Margin="0 10 0 0"/>
                                <Button Content="View Details"
                                        Width="100"
                                        Height="30"
                                        Background="#4ECCA3"
                                        Foreground="White"
                                        FontWeight="Bold"
                                        HorizontalAlignment="Left"
                                        Margin="0 10 0 0"
                                        Click="DetailButton_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
