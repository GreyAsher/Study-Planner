<UserControl x:Class="StudyPlanner.Views.InfoControl.SubjectInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid VerticalAlignment="Top" Margin="0,10,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Subject Details"
               FontSize="26"
               FontWeight="SemiBold"
               Foreground="#232931"
               VerticalAlignment="Center"
               Grid.Column="0"/>

            <Button Content="Back"
                Width="80"
                Height="35"
                Background="#4ECCA3"
                Foreground="White"
                FontWeight="Bold"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,10,0"
                Grid.Column="1"
                />
        </Grid>


        <!-- Subject Details Content -->
        <Border Grid.Row="1"
                Background="#E3FCEF"
                CornerRadius="12"
                Padding="20"
                Margin="0,20,0,0"
                SnapsToDevicePixels="True">
            <StackPanel>
                <!-- Subject Name -->
                <TextBlock Text="{Binding SubjectName}"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#232931"
                           Margin="0,0,0,10"/>

                <!-- Description -->
                <TextBlock Text="{Binding Description}"
                           Foreground="#444"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <!-- Target Hours -->
                <TextBlock Text="{Binding TargetHours, StringFormat='Target Study Hours: {0} hrs'}"
                           FontSize="14"
                           Foreground="#555"
                           Margin="0,0,0,5"/>

                <!-- Hours Studied -->
                <TextBlock Text="{Binding HoursStudied, StringFormat='Hours Studied: {0} hrs'}"
                           FontSize="14"
                           Foreground="#555"
                           Margin="0,0,0,5"/>

                <!-- Progress Display -->
                <TextBlock Text="{Binding Progress, StringFormat='Progress: {0}%'}"
                           FontSize="14"
                           Foreground="#555"
                           Margin="0,0,0,5"/>
                <ProgressBar Value="{Binding Progress}"
                             Height="10"
                             Foreground="#4ECCA3"
                             Margin="0,10,0,20"/>

                <!-- Dates Section -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Start Date: " FontWeight="Bold" Foreground="#232931"/>
                    <TextBlock Text="{Binding StartDate, StringFormat='{}{0:MMMM dd, yyyy}'}" Foreground="#555"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="End Date: " FontWeight="Bold" Foreground="#232931"/>
                    <TextBlock Text="{Binding EndDate, StringFormat='{}{0:MMMM dd, yyyy}'}" Foreground="#555"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Edit"
                            Width="100"
                            Height="35"
                            Background="#4ECCA3"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            />
                    <Button Content="Delete"
                            Width="100"
                            Height="35"
                            Background="#FF6B6B"
                            Foreground="White"
                            FontWeight="Bold"
                            />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
