<Window x:Class="StudyPlanner.Views.AddViews.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Subject"
        Height="400"
        Width="500"
        Background="#4ECCA3"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Border BorderBrush="#4ECCA3" BorderThickness="2" CornerRadius="10" Padding="20" Background="White" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Margin="0 0 0 20">
                <TextBlock Text="Add New Subject"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#232931"
                           DockPanel.Dock="Left"/>
            </DockPanel>

            <!-- Form Fields -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Subject Name" FontWeight="Bold" Foreground="#232931"/>
                <TextBox x:Name="SubjectNameTextBox"
                         Height="30"
                         Background="#F8F9FA"
                         BorderBrush="#DADADA"
                         BorderThickness="1"
                         Padding="5"/>

                <TextBlock Text="Description" FontWeight="Bold" Foreground="#232931"/>
                <TextBox x:Name="DescriptionTextBox"
                         Height="70"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Background="#F8F9FA"
                         BorderBrush="#DADADA"
                         BorderThickness="1"
                         Padding="5"/>

                <TextBlock Text="Target Hours" FontWeight="Bold" Foreground="#232931"/>
                <TextBox x:Name="TargetHoursTextBox"
                         Height="30"
                         Background="#F8F9FA"
                         BorderBrush="#DADADA"
                         BorderThickness="1"
                         Padding="5"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                <Button Content="Cancel"
                        Width="100"
                        Height="35"
                        Margin="0 0 10 0"
                        Background="#EEEEEE"
                        Foreground="#232931"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="CancelButton_Click"/>

                <Button Content="Save"
                        Width="100"
                        Height="35"
                        Background="#4ECCA3"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="Bold"
                        Click="SaveButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
