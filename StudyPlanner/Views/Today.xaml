<UserControl x:Class="StudyPlanner.Views.Today"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Today's Plan"
                   FontSize="26"
                   FontWeight="SemiBold"
                   Foreground="#232931"
                   Margin="0 0 0 20"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" Orientation="Vertical">

            <Border Background="#F4F6F8" Padding="15" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="⏰ Morning Study" FontSize="18" FontWeight="Bold" Foreground="#232931"/>
                    <TextBlock Text="Topics: Calculus Review" Foreground="#555" Margin="0 5 0 0"/>
                    <ProgressBar Value="60" Height="10" Foreground="#4ECCA3" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>

            <Border Background="#F4F6F8" Padding="15" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="📘 Afternoon Session" FontSize="18" FontWeight="Bold" Foreground="#232931"/>
                    <TextBlock Text="Topics: Programming Practice" Foreground="#555" Margin="0 5 0 0"/>
                    <ProgressBar Value="30" Height="10" Foreground="#4ECCA3" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>

            <Border Background="#F4F6F8" Padding="15" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="📚 Evening Reading" FontSize="18" FontWeight="Bold" Foreground="#232931"/>
                    <TextBlock Text="Topic: Physics Chapter 3" Foreground="#555" Margin="0 5 0 0"/>
                    <ProgressBar Value="80" Height="10" Foreground="#4ECCA3" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</UserControl>
