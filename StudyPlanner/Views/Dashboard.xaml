<UserControl x:Class="StudyPlanner.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F5F7FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="📊 Study Analytics Dashboard"
                   FontSize="26" FontWeight="Bold"
                   Foreground="#333"
                   Margin="0 0 0 15"/>

        <!-- Summary Cards -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="0 10 0 20" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="120">
            <!-- Total Study Hours -->
            <Border Background="#4ECCA3" CornerRadius="12" Margin="10" Padding="15" >
                <StackPanel>
                    <TextBlock Text="Total Study Hours" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="124 hrs" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0 5 0 0"/>
                    <TextBlock Text="This Month" Foreground="#E0F2F1" FontSize="13"/>
                </StackPanel>
            </Border>

            <!-- Goals Completed -->
            <Border Background="#00ADB5" CornerRadius="12" Margin="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Goals Completed" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="15" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0 5 0 0"/>
                    <TextBlock Text="Out of 20 set" Foreground="#E0F7FA" FontSize="13"/>
                </StackPanel>
            </Border>

            <!-- Active Subjects -->
            <Border Background="#393E46" CornerRadius="12" Margin="10" Padding="15">
                <StackPanel>
                    <TextBlock Text="Active Subjects" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="6" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0 5 0 0"/>
                    <TextBlock Text="Currently tracked" Foreground="#E0E0E0" FontSize="13"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Main Chart + Activity Section -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Chart Placeholder -->
            <Border Background="White" CornerRadius="15" Padding="15" Grid.Column="0" >
                <StackPanel>
                    <TextBlock Text="📈 Study Progress (Placeholder for Chart)"
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="#333" Margin="0 0 0 10"/>
                    <Rectangle Height="200" Fill="#E0E0E0" RadiusX="10" RadiusY="10"
                               Stroke="#BDBDBD" StrokeDashArray="2 3"/>
                    <TextBlock Text="(Insert chart here later, e.g. study hours per day)"
                               FontSize="13" Foreground="#757575" Margin="0 10 0 0"/>
                </StackPanel>
            </Border>

            <!-- Recent Activity -->
            <Border Background="White" CornerRadius="15" Padding="15" Grid.Column="1">
                <StackPanel>
                    <TextBlock Text="🕒 Recent Activity"
                               FontSize="18" FontWeight="SemiBold"
                               Foreground="#333" Margin="0 0 0 10"/>
                    <ListBox BorderThickness="0">
                        <ListBoxItem Content="✅ Finished Math assignment (2h)" />
                        <ListBoxItem Content="📖 Studied Biology - Photosynthesis (1.5h)" />
                        <ListBoxItem Content="🧠 Reviewed Physics formulas (1h)" />
                        <ListBoxItem Content="📅 Planned next week’s study sessions" />
                        <ListBoxItem Content="🎯 Updated study goals" />
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
